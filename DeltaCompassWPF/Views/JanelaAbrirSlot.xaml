            <Grid>
                <Button x:Name="btnConfirmar" ToolTip="Aplicar sensibilidade" Background="#2E2BC2"
                        BorderThickness="0" Height="30" Width="150" Margin="0, 25, 0, 0"
                        MouseEnter="btnExcluir_MouseEnter" MouseLeave="btnExcluir_MouseLeave"
                        Command="{Binding AplicarSensCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#101010" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="Border" BorderBrush="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#16145C" 
                                                        TargetName="Border"/>
                                                <Setter Property="BorderBrush" Value="#16145C" 
                                                        TargetName="Border"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Label Content="Aplicar" FontFamily="..\fonts\#ModeSeven" Foreground="White" 
                           FontSize="15"/>
                </Button>

                <Button x:Name="btnSalvar" ToolTip="Salar alteração" Background="#2E2BC2"
                        BorderThickness="0" Height="30" Width="150" Margin="0, 25, 0, 0"
                        MouseEnter="btnExcluir_MouseEnter" MouseLeave="btnExcluir_MouseLeave"
                        Command="{Binding SalvarEdicaoSensCommand}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#101010" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="Border" BorderBrush="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#16145C" 
                                                        TargetName="Border"/>
                                                <Setter Property="BorderBrush" Value="#16145C" 
                                                        TargetName="Border"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Label Content="Salvar" FontFamily="..\fonts\#ModeSeven" Foreground="White" 
                           FontSize="15"/>
                </Button>
            </Grid>            
            
