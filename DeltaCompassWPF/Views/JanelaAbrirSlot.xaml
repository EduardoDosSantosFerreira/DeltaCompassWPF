<Window x:Class="DeltaCompassWPF.Views.JanelaAbrirSlot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeltaCompassWPF.Views" 
        xmlns:viewmodels="clr-namespace:DeltaCompassWPF.ViewModels"
        xmlns:converter="clr-namespace:DeltaCompassWPF.Converters"
        mc:Ignorable="d"
        Title="JanelaAbrirSlot" Height="250" Width="400" WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="janela_MouseLeftButtonDown" WindowStyle="None"
        Background="#313131" ResizeMode="NoResize" AllowsTransparency="True"
        x:Name="janela">
    <Window.DataContext>
        <viewmodels:SlotViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border BorderThickness="0, 0, 0, 2" BorderBrush="#2E2BC2" Grid.Row="0" Grid.Column="0">
            <DockPanel Background="#101010" LastChildFill="False">
                <TextBlock Text="{Binding Slot.Nome}" Foreground="White" FontFamily="../fonts/#ModeSeven"
                           FontSize="16" VerticalAlignment="Center" Margin="15, 0, 0, 0"/>
                <Grid DockPanel.Dock="Right" MouseDown="btnFechar_MouseDown"
                      MouseEnter="btnFechar_MouseEnter" MouseLeave="btnFechar_MouseLeave">
                    <Rectangle x:Name="btnFechar" Width="35" Height="auto"/>
                    <Image Source="..\resource\close.png"
                           Width="20"/>
                </Grid>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="PaleVioletRed" Text="{Binding MessagemErro}" FontFamily="../fonts/#Poppins" FontSize="14" 
                       Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" Width="300" TextAlignment="Center"
                       Visibility="{Binding MessagemErro, Converter={StaticResource StringToVisibilityConverter}}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Foreground="White" Content="Sensibilidade:" FontFamily="../fonts/#Poppins" FontSize="16" 
                       Grid.Column="0" VerticalAlignment="Center"/>
                <Grid Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBox FontFamily="..\fonts\#Poppins" Foreground="Black" Padding="3"
                             FontSize="16" VerticalAlignment="Center" Width="80" BorderBrush="#2E2BC2"
                             Text="{Binding NovaSensibilidade, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                             Loaded="TextBox_Loaded"/>
                    <Label Foreground="White" Content="{Binding Slot.Sensibilidade}" FontFamily="../fonts/#Poppins" FontSize="16" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0, 0, 5, 0" Grid.Column="2">
                    <Button x:Name="btnExcluir" MouseEnter="btnExcluir_MouseEnter" MouseLeave="btnExcluir_MouseLeave"
                            Width="40" Height="40" Command="{Binding ExcluirSensibilidadeCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#101010" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border" BorderBrush="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="50">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#16145C" 
                                                            TargetName="Border"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Image Source="../resource/trash.png" Width="25"/>
                    </Button>

                    <Button x:Name="btnEditar" MouseEnter="btnExcluir_MouseEnter" MouseLeave="btnExcluir_MouseLeave"
                            Width="40" Height="40" Margin="10, 0, 0, 0" Command="{Binding ToggleEditarCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#101010" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border" BorderBrush="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="50">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#16145C" 
                                                            TargetName="Border"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Image Source="../resource/edit-box.png" Width="25" Margin="2, 0, 0, 0"/>
                    </Button>
                </StackPanel>
            </Grid>
