<Window x:Class="DeltaCompassWPF.Views.JanelaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeltaCompassWPF.Views"
        xmlns:viewModel="clr-namespace:DeltaCompassWPF.ViewModels"
        xmlns:Controls="clr-namespace:DeltaCompassWPF.Views.UserControls"
        mc:Ignorable="d"
        Title="JanelaLogin" Height="431" Width="400" WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="janela_MouseLeftButtonDown" WindowStyle="None"
        Background="#313131" ResizeMode="NoResize" AllowsTransparency="True"
        x:Name="janela">
    <Window.DataContext>
        <viewModel:LoginViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Border BorderThickness="0, 0, 0, 2" BorderBrush="#2E2BC2" Grid.Row="0" Grid.Column="0">
            <DockPanel Background="#101010" LastChildFill="False">
                <Grid DockPanel.Dock="Right">
                    <Rectangle x:Name="btnFechar" Width="35" Height="auto"/>
                    <Image Source="..\resource\close-delta.png" MouseEnter="btnFechar_MouseEnter" 
                           MouseLeave="btnFechar_MouseLeave" MouseDown="btnFechar_MouseDown"/>
                </Grid>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="60, 50">
            <Label Content="Entrar" FontFamily="../fonts/#Poppins" Foreground="White" FontSize="17"/>
            <Border Background="#C2C2C2" BorderBrush="#2E2BC2" BorderThickness="1.5" CornerRadius="15" 
                    VerticalAlignment="Center" Width="auto">
                <Grid>
                    <Label x:Name="placeLogin" Content="Nome, Email ou telefone." FontSize="16" FontFamily="../fonts/#Poppins" 
                           Foreground="#888888" Margin="5, 0, 5, 0"  Padding="2, 5, 0, 5"/>
                    <TextBox x:Name="txtLogin"  FontSize="16" BorderThickness="0" Margin="5, 0, 5, 0" 
                             Background="Transparent" FontFamily="../fonts/#Poppins"
                             Padding="0, 5, 0, 5" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap"
                             TextChanged="txtLogin_TextChanged" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>

            <Controls:BindablePasswordBox Width="auto" Margin="0, 20, 0, 0" 
                                          Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Placeholder="Insira a senha"/>

            <CheckBox Content="Lembrar senha" Foreground="White" FontFamily="../fonts/#Poppins"
                      HorizontalAlignment="Center" Margin="0, 10, 0, 0"/>

            <Label Content="Esqueci minha senha" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>

            <Button x:Name="btnConfirmar" ToolTip="Entrar em uma conta" Background="#2E2BC2" Command="{Binding LoginCommand}"
                    BorderThickness="0" Height="30" Width="140" Margin="0, 10, 0, 20"
                    MouseEnter="bordaEntrar_MouseEnter" MouseLeave="bordaEntrar_MouseLeave">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#101010" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#16145C" 
                                                    TargetName="Border"/>
                                            <Setter Property="BorderBrush" Value="#16145C" 
                                                    TargetName="Border"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Label Content="Entrar" FontFamily="..\fonts\#ModeSeven" Foreground="White" 
                       FontSize="15"/>
            </Button>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="PaleVioletRed" 
                       FontSize="12" HorizontalAlignment="Center" TextWrapping="Wrap"/>

            <Label Content="Ainda não está cadastrado? Crie uma conta." Foreground="White" 
                   FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
